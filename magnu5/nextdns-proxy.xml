<?xml version="1.0" encoding="utf-8"?>
<Containers>
  <TemplateURL>https://raw.githubusercontent.com/magnu5/docker-templates/master/magnu5/nextdns-proxy.xml</TemplateURL>
  <Beta>False</Beta>
  <Category>Network:</Category>
  <Name>nextdns-proxy</Name>
  <Description>
    [b][u][span style='color: #E80000;']Description[/span][/u][/b][br]
    Block ads, trackers and malicious websites on all your devices. Get in-depth analytics about your Internet traffic. Protect your privacy and bypass censorship. Shield your kids from adult content. Try it now for free[br][br]
    [b][u][span style='color: #E80000;']Configuration[/span][/u][/b][br]
    [b]/config[/b] This is where nextdns will store it's configuration file, database and logs.[br]
    [b][u][span style='color: #E80000;']Documentation[/span][/u][/b][br]
    https://nextdns.io/faq[br][br]
  </Description>
  <Overview>
    The next-generation DNS service.
  </Overview>
  <Support></Support>
  <Registry>https://hub.docker.com/r/magnust/nextdns-proxy</Registry>
  <GitHub>https://www.github.com/magnu5/nextdns-proxy</GitHub>
  <Repository>magnust/nextdns-proxy</Repository>
  <Project>https://nextdns.io</Project>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
    <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>53</HostPort>
        <ContainerPort>53</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
      <Port>
        <HostPort>53</HostPort>
        <ContainerPort>53</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name>UMASK</Name>
      <Value>000</Value>
    </Variable>
    <Variable>
      <Name>PUID</Name>
      <Value>99</Value>
    </Variable>
    <Variable>
      <Name>PGID</Name>
      <Value>100</Value>
    </Variable>
    <Variable>
      <Name>NEXTDNS_CONFIG</Name>
      <Value></Value>
    </Variable>
    <Variable>
      <Name>NEXTDNS_FORWARDING_DOMAIN</Name>
      <Value></Value>
    </Variable>
    <Variable>
      <Name>NEXTDNS_FORWARDING_DNSIP</Name>
      <Value></Value>
    </Variable>
  </Environment>
  <Data>
    <Volume>
      <HostDir>/mnt/cache/appdata/config</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/data</HostDir>
      <ContainerDir>/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Icon>https://raw.githubusercontent.com/magnu5/docker-templates/master/magnu5/images/nextdns-proxy.png</Icon>
  <ExtraParams></ExtraParams>
</Containers>